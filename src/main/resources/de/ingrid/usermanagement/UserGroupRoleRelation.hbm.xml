<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="de.ingrid.usermanagement.UserGroupRoleRelation" table="usergrouprole">
        <id name="id" type="java.lang.Integer">
            <generator class="native" />
        </id>

        <many-to-one name="user" column="username" class="de.ingrid.usermanagement.User" />
        <many-to-one name="group" column="groupname" class="de.ingrid.usermanagement.Group" />
        <many-to-one name="role" column="rolename" class="de.ingrid.usermanagement.Role" />
    </class>
</hibernate-mapping>
