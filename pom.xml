                </mail>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
-->
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <uniqueVersion>true</uniqueVersion>
      <id>ingrid-repository</id>
      <name>ingrid-repository</name>
      <url>file:///srv/www/htdocs/ingrid/maven2</url>
    </repository>
    <snapshotRepository>
      <uniqueVersion>true</uniqueVersion>
      <id>ingrid-repository</id>
      <name>ingrid-repository</name>
      <url>file:///srv/www/htdocs/ingrid/maven2</url>
    </snapshotRepository>
  </distributionManagement>
</project>
